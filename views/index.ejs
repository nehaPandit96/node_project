<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Automobile Inventory</title>
    <style>
      /* Navbar container */
      .navbar {
        overflow: hidden;
        background-color: #333; /* Dark background color */
      }

      /* Links inside the navbar */
      .navbar a {
        float: left;
        display: block;
        color: #f2f2f2; /* White text color */
        text-align: center;
        padding: 14px 20px; /* Padding for each link */
        text-decoration: none;
      }

      /* Change background color of links on hover */
      .navbar a:hover {
        background-color: #ddd; /* Light grey background color */
        color: black; /* Black text color */
      }
    </style>
  </head>
  <body>
    <div class="navbar">
      <a href="/">Home</a>
      <a href="#login">Login</a>
      <a href="#register">Register</a>
      <a href="/add">Add a New car</a>
    </div>
    <h1>Automobile Inventory</h1>
    <ul>
      <% cars.forEach(car => { %>
      <li>
        <h2>
          <a href="/cardetails/<%= car._id %>"><%= car.manufacturer %></a>
        </h2>
        <p>Price: <%= car.price %></p>
        <p>Model: <%= car.model %></p>
        <p>Year: <%= car.year %></p>
        <p>Color: <%= car.color %></p>
        <h3>Images:</h3>
        <div>
          <% car.images.forEach(image => { %>
          <div>
            <img
              src="<%= image %>"
              alt="<%= car.manufacturer %>"
              height="300"
              width="300"
            />
          </div>
          <% }); %>
        </div>
      </li>
      <form action="/deleteCar/<%= car._id %>" method="POST">
        <button type="submit" class="deletebtn">Delete</button>
      </form>
      <% }); %>
    </ul>
  </body>
</html>
